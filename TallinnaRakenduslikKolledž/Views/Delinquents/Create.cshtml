@model TallinnaRakenduslikKolledz.Models.DelinquentsBase
@{
    ViewData["Title"] = "Lisa Korrarikuja";
}

<h2>Korrarikuja lisamine</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" calss="contol-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span aps-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PunishmentType" class="control-label"></label>
                <input asp-for="PunishmentType" class="form-control" />
                <span asp-validation-for="PunishmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Salvesta" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Mine tagasi loendisse</a>
</div>
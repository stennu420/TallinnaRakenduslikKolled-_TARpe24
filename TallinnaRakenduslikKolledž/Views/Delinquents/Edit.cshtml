@model TallinnaRakenduslikKolledz.Models.DelinquentsBase
@{
    ViewData["Title"] = "Korrarikkujad";
}

<h2>Muuda korrarikkuja andmeid</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PunishmentType" class="control-label"></label>
                <input asp-for="PunishmentType" class="form-control" />
                <span asp-validation-for="PunishmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PunishmentLength" class="control-label"></label>
                <input asp-for="PunishmentLength" class="form-control" />
                <span asp-validation-for="PunishmentLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Salvesta" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>